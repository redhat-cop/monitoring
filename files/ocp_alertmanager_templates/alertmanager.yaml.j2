global:
  resolve_timeout: 5m
inhibit_rules:
  - equal:
      - namespace
      - alertname
    source_match:
      severity: critical
    target_match_re:
      severity: warning|info
  - equal:
      - namespace
      - alertname
    source_match:
      severity: warning
    target_match_re:
      severity: info
receivers:
  - name: Critical
  - name: Default
  - name: Watchdog
  - name: mail
    email_configs:
      - to: "{{ notification_recipients }}"
        from: "{{ from }}"
        smarthost: '{{ smtp_host }}:{{ smtp_port }}'
        auth_username: "{{ smtp_username }}"
        auth_password: "{{ smtp_password }}"
        auth_identity: "{{ smtp_username }}"
        require_tls: false
route:
  group_by:
    - namespace
  group_interval: 5m
  group_wait: 30s
  receiver: Default
  repeat_interval: 12h
  routes:
    - match:
        alertname: Watchdog
      receiver: Watchdog
    - match:
        severity: critical
      receiver: Critical
    - receiver: mail
      match_re:
        severity: Warning|Critical

